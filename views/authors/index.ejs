<h2 style="text-align: center;">All Authors</h2> 
<br>
<form action="/authors" style="text-align: left;" method="GET">
  <label for="name">Name</label>
  <input type="text" name="name" value="<%=searchOpt.name%>"/>
  <button type="submit" style="float: right;">Search</button>
</form>
<br>

<% authors.forEach(author => { %> 
  <div><%= author.name %></div>
<% }) %>