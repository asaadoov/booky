<div class="row clearfix  text-left">
  <div class="col-sm-12 row">
    <div class="form-group col-sm-6">
      <label class="form-label" for="title">Title</label>
      <input type="text" class="form-control" name="title" autocomplete="off"  value="<%=book.title%>"/>
    </div>
    <div class="form-group col-sm-6">
      <label class="form-label" for="author">Author</label>
      <input type="text" class="form-control" name="author" autocomplete="off"  value="<%=book.author%>"/>
    </div>
  </div>
  <div class="col-sm-12 row">
    <div class="form-group col-sm-6">
      <label class="form-label" for="publishDate">Publish Date</label>
      <input type="date" class="form-control" name="publishDate" autocomplete="off"  
             value="<%=book.publishDate == null ? '' : book.publishDate. toISOString().split('T')[0] %>"/>
    </div>
    <div class="form-group col-sm-6">
      <label class="form-label" for="pageCount">Page Count</label>
      <input type="number" class="form-control" min="1" name="pageCount" autocomplete="off"  value="<%=book.pageCount%>"/>
    </div>
  </div>
  <!-- end -->

  <div class="col-sm-12 row">
    <div class="col-sm-6">
      <label for="cover">Cover</label>
      <input type="file" class="filepond" name="cover"/>
    </div>
    <div class="form-group col-sm-6">
      <label class="form-label" for="description">Decription</label>
      <textarea class="form-control" name="description" autocomplete="off"> 
        <%=book.description%>
      </textarea>
    </div>
  </div>
</div>